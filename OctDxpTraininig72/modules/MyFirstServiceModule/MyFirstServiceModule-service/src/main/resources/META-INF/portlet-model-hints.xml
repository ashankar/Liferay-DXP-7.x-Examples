<?xml version="1.0"?>

<model-hints>
	<hint-collection name="C1">
		<hint name="max-length">200</hint>
	</hint-collection>
	<hint-collection name="C2">
		<hint name="max-length">500</hint>
	</hint-collection>
	<model name="com.training.mysb.model.CustomUser">
		<field name="id" type="long" />
	</model>
	<model name="com.training.mysb.model.Department">
		<field name="uuid" type="String" />
		<field name="deptId" type="long" />
		<field name="name" type="String" />
		<field name="hod" type="String" />
	</model>
	<model name="com.training.mysb.model.Employee">
		<field name="employeeId" type="long" />
		<field name="groupId" type="long" />
		<field name="companyId" type="long" />
		<field name="userId" type="long" />
		<field name="userName" type="String">
			<hint-collection name="C1" />
		</field>
		<field name="createDate" type="Date" />
		<field name="modifiedDate" type="Date" />
		<field name="dob" type="Date" />
		<field name="mobile" type="int" />
		<field name="address" type="String">
			<hint-collection name="C2" />
		</field>
		<field name="deptId" type="long" />
	</model>
	<model name="com.training.mysb.model.Salary">
		<field name="uuid" type="String" />
		<field name="salId" type="long" />
		<field name="amount" type="long" />
		<field name="employeeId" type="long" />
	</model>
</model-hints>