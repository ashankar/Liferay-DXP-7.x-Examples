<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_2_0.dtd">

<service-builder dependency-injector="ds" package-path="com.training.sb">
	<namespace>mysb</namespace>
	
	<entity local-service="true" name="Employee" remote-service="false">
		<column name="empId" primary="true" type="long"/>
		<column name="name" type="String" />
		<column name="address" type="String" />
		
		<!-- Audit fields -->
		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />
        <column name="deptId" type="long"></column>
        
        <finder name="EmployeeName" return-type="Collection">
        <finder-column name="name" />
        </finder> 
		
	</entity>
	
	<entity local-service="true" name="Department" remote-service="false">
		<column name="uuid" primary="true" type="long"/>
		<column name="deptId" type="long"/>
		<column name="name" type="String"/>
		
	</entity>
	

</service-builder>