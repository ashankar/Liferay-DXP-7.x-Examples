<?xml version="1.0"?>

<model-hints>
	<hint-collection name="C1">
		<hint name="max-length">200</hint>
	</hint-collection>
	<hint-collection name="C2">
		<hint name="max-length">300</hint>
	</hint-collection>
	<model name="com.jun.training.model.Department">
		<field name="uuid" type="long" />
		<field name="deptId" type="long" />
		<field name="name" type="String">
			<hint-collection name="C1" />
		</field>
	</model>
	<model name="com.jun.training.model.Employee">
		<field name="empId" type="long" />
		<field name="name" type="String">
			<hint-collection name="C1" />
		</field>
		<field name="address" type="String">
			<hint-collection name="C2" />
		</field>
		<field name="companyId" type="long" />
		<field name="userId" type="long" />
		<field name="userName" type="String" />
		<field name="createDate" type="Date" />
		<field name="modifiedDate" type="Date" />
		<field name="deptId" type="long" />
	</model>
</model-hints>